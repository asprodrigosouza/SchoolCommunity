<script type="text/javascript">

    // Chamada Ajax Cadastrar Evento
    function ExecutarCadastroPrimeiroAcessoMudarSenha() {

        // DADOS NOVA SENHA
        var vNovaSenha = $("#idNovaSenha").val();
        var vConfirmacaoNovaSenha = $("#idConfirmacaoNovaSenha").val();
        
        // JSON -> ENVIA CORPO BODY HTTPPOST
        var Dados = {};

        // =====>>> DADOS NOVA SENHA <<<=====

        // - Nova Senha
        Dados = vNovaSenha;
        Dados = vConfirmacaoNovaSenha;
        // - #Nova Senha

        var url = '/Home/';
        $.ajax({
            type: "POST",
            url: url,
            contentType: 'application/json; charset=utf-8',
            dataType: 'html',
            data: JSON.stringify(Dados),

            success: function (message) {

                $.alert({
                    title: "",
                    content: "Senha Alterada!",
                    buttons: {
                        OK: {
                            btnClass: "btn btn-primary"
                        }
                    }
                });

                $("#idFormCadastrarEvento input").val("");
                $("#idDescricaoObservacaoEvento").val("");
            },

            error: function () {
                alert('Ops, Foi encontrado um erro !');
            }
        });
    }

</script>