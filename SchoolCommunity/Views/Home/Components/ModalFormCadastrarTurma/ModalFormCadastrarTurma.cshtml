@if (Model.ExibirModal)
{
    // Fluxo de Edição
    @if (Model.Fluxo == 2)
    {
        <script type="text/javascript">
            function PreencherDados() {
                $("#idDescricaoTurma").val('@Model.Descricao');
                $("#idPeriodo").val('@Model.Periodo');
                $("#idAnoLetivo").val("@Model.AnoLetivo");
                $("#idTituloModalFormCadastroTurma").text("Editar Turma");
                $("#idDivBtnEditarAtualizarTurma").css("display", "block");
                $("#idDivBtnCadastrarTurma").css("display", "none");
            }

            PreencherDados();
        </script>

    }
    else
    {
        // Fluxo de Cadastro
        <script type="text/javascript">
            $("#idDivBtnCadastrarTurma").css("display", "block");
            $("#idDivBtnEditarAtualizarTurma").css("display", "none");
        </script>
    }
    
    <script type="text/javascript">
        $('#idModalFormCadastrarTurma').modal('show');
    </script>
}

<script type="text/javascript">

    function CadastrarTurma() {

        var vDescricaoTurma = $("#idDescricaoTurma").val();
        var vPeriodoTurma = $("#idPeriodo").val();
        var vAnoLetivoTurma = $("#idAnoLetivo").val();

        var DadosTurma = {};

        DadosTurma.Descricao = vDescricaoTurma;
        DadosTurma.Periodo = vPeriodoTurma;
        DadosTurma.AnoLetivo = vAnoLetivoTurma;

        var url = "/Home/CadastrarTurmaViewComponent";
        var stringReqdata = JSON.stringify(DadosTurma);

        $.ajax({
            type: "POST",
            url: url,
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            data: stringReqdata,

            success: function (message) {
                $("#idModalFormCadastrarTurma").modal("hide");

                $.alert({
                    title: "",
                    content: "Turma Cadastrada com Sucesso!",
                    buttons: {
                        OK: {
                            btnClass: "btn btn-primary"
                        }
                    }
                });

                $("#idFormCadastrarTurma input").val("");

                AtualizarTurmasCadastradas();
            },

            error: function () {
                alert("Error!");
            }


        });
    }

    function EditarAtualizarTurma(idTurma) {

        //alert(idTurma);

        var vDescricaoTurma = $("#idDescricaoTurma").val();
        var vPeriodoTurma = $("#idPeriodo").val();
        var vAnoLetivoTurma = $("#idAnoLetivo").val();

        var DadosTurma = {};

        //DadosTurma._id = 
        DadosTurma.Descricao = vDescricaoTurma;
        DadosTurma.Periodo = vPeriodoTurma;
        DadosTurma.AnoLetivo = vAnoLetivoTurma;
        
        var url = '/Home/EditarAtualizarTurmaViewComponent';
        var stringReqdata = JSON.stringify(DadosTurma);

        $.ajax({
            type: "POST",
            url: url,
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',

            //contentType: false,
            //processData: false,

            data: stringReqdata,

            success: function (message) {

                $("#idModalFormCadastrarTurma").modal("hide");

                $.alert({
                    title: "",
                    content: "Turma Atualizada com Sucesso!",
                    buttons: {
                        OK: {
                            btnClass: "btn btn-primary"
                        }
                    }
                });

                $("#idFormCadastrarTurma input").val("");

            },

            error: function () {
                alert("Error!");
            }
        });

    }

</script>

