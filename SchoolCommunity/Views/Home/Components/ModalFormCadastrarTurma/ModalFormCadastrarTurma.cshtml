@model SchoolCommunity.Models.ViewModels.TurmaVM
<!-- MODAL FORM - CADASTRAR TURMA -->
<div id="idModalFormCadastrarTurma" class="modal fade" role="dialog" data-backdrop="static">
    <div class="modal-dialog modal-lg">

        <div class="modal-content">

            <div class="modal-header">
                <button class="close" aria-hidden="true" type="button" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="idTituloModalFormCadastroTurma">Cadastrar Turma</h4>
            </div>

            <div class="modal-body" id="idFormCadastrarTurma">

                <div class="row clearfix">

                    <!-- CAMPO DESCRIÇÃO DA TURMA -->
                    <div class="col-sm-4">
                        <div class="form-group">
                            <div class="form-line">
                                <label>Descrição da Turma:</label>
                                <input id="idDescricaoTurma" type="text" class="form-control" placeholder="Digite a turma" />
                            </div>
                        </div>
                    </div>

                    <!-- CAMPO PERÍODO --->
                    <div class="col-sm-4">
                        <div class="form-group">
                            <div class="form-line">
                                <label>Periodo:</label>
                                <input id="idPeriodo" type="text" class="form-control" placeholder="Digite o Periodo" />
                            </div>
                        </div>
                    </div>

                    <!-- CAMPO ANO LETIVO -->
                    <div class="col-sm-4">
                        <div class="form-group">
                            <div class="form-line">
                                <label>Ano letivo:</label>
                                <input id="idAnoLetivo" type="text" class="form-control" placeholder="Digite o Ano letivo" />
                            </div>
                        </div>
                    </div>

                </div>

                <!-- Botão Realizar Cadastro Turma -->
                <div id="idDivBtnCadastrarTurma">
                    <button id="idBtnCadastrarTurma" type="button" class="btn btn-lg bg-blue waves-effect">
                        <i class="material-icons">save</i>
                        <span>Cadastrar Turma</span>
                    </button>
                </div>

                <!-- Botão Editar/Atualizar Cadastro Turma -->
                <div id="idDivBtnEditarAtualizarTurma">
                    <button onclick="EditarAtualizarTurma('@Model._id');" type="button" class="btn btn-lg bg-blue waves-effect">
                        <i class="material-icons">update</i>
                        <span>Atualizar Turma</span>
                    </button>
                </div>

            </div>

        </div>
    </div>
</div>
